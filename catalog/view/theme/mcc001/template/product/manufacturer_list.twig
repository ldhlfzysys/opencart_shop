{{ header }}
<div class="container columns">
    <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
    </ul>
    <div class="row">{{ column_left }}
        {% if column_left and column_right %}
        {% set class = 'col-sm-4 col-md-6' %}
        {% elseif column_left or column_right %}
        {% set class = 'col-sm-8 col-md-9' %}
        {% else %}
        {% set class = 'col-sm-12' %}
		{% endif %}

        <div class="{{ class }}">
            <section id="content">
                {{ content_top }}
                <h1>{{ heading_title }}</h1>
                {% if categories %}
                <p><strong>{{ text_index }}</strong>
                    {% for category in categories %}
                    &nbsp;&nbsp;&nbsp;<a href="index.php?route=product/manufacturer#{{ category.name }}">{{ category.name }}</a>
                    {% endfor %}
                </p>
                {% for category in categories %}
                <h2 id="{{ category.name }}">{{ category.name }}</h2>
                {% if category.manufacturer %}
                {% for manufacturers in rray_chunk %}
                <div class="row">
                    {% for manufacturer in manufacturers %}
                    <div class="col-sm-3"><a href="{{ manufacturer.href }}">{{ manufacturer.name }}</a></div>
                    {% endfor %}
                </div>
                {% endfor %}
                {% endif %}
                {% endfor %}

                 {% else %}
                <p>{{ text_empty }}</p>
                <div class="buttons clearfix">
                    <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary btn-custom">{{ button_continue }}</a></div>
                </div>
                {% endif %}

                {{ content_bottom }}
            </section>
        </div>
        {{ column_right }}
    </div>
</div>
{{ footer }}