{{ header }}
<div class="container columns">
    <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
    </ul>
    <div class="row">{{ column_left }}
        {% if column_left and column_right %}
        {% set class = 'col-sm-4 col-md-6' %}
        {% elseif column_left or column_right %}
        {% set class = 'col-sm-8 col-md-9' %}
        {% else %}
        {% set class = 'col-sm-12' %}
		{% endif %}
        <div class="{{ class }}">
            <section id="content">
                {% if success %}
                <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}</div>
                {% endif %}
                {{ content_top }}
                <div class="row">
                    <div class="col-sm-12 col-md-6">

                        <h2>{{ text_my_account }}</h2>
                        <ul class="list-unstyled">
                            <li><a href="{{ edit }}" class="btn btn-link" title="{{ text_edit }}"><i class="fa fa-pencil-square-o"></i>{{ text_edit }}</a></li>
                            <li><a href="{{ password }}" class="btn btn-link" title="{{ text_password }}"><i class="fa fa-lock"></i>{{ text_password }}</a></li>
                            <li><a href="{{ address }}" class="btn btn-link" title="{{ text_address }}"><i class="fa fa-building-o"></i>{{ text_address }}</a></li>
                            <li><a href="{{ wishlist }}" class="btn btn-link" title="{{ text_wishlist }}"><i class="fa fa-heart-o"></i>{{ text_wishlist }}</a></li>
                        </ul>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <h2>{{ text_my_orders }}</h2>
                        <ul class="list-unstyled">
                            <li><a href="{{ order }}" class="btn btn-link" title="{{ text_order }}"><i class="fa fa-history"></i>{{ text_order }}</a></li>
                            <li><a href="{{ download }}" class="btn btn-link" title="{{ text_download }}"><i class="fa fa-download"></i>{{ text_download }}</a></li>
                            {% if reward %}
                            <li><a href="{{ reward }}" class="btn btn-link" title="{{ text_reward }}"><i class="fa fa-trophy"></i>{{ text_reward }}</a></li>
                            {% endif %}
                            <li><a href="{{ return }}" class="btn btn-link" title="{{ text_return }}"><i class="fa fa-reply"></i>{{ text_return }}</a></li>
                            <li><a href="{{ transaction }}" class="btn btn-link" title="{{ text_transaction }}"><i class="fa fa-shopping-cart"></i>{{ text_transaction }}</a></li>
                            <li><a href="{{ recurring }}" class="btn btn-link" title="{{ text_recurring }}"><i class="fa fa-credit-card"></i>{{ text_recurring }}</a></li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h2>{{ text_my_newsletter }}</h2>
                        <ul class="list-unstyled">
                            <li><a href="{{ newsletter }}" class="btn btn-link" title="{{ text_newsletter }}"><i class="fa fa-envelope-o"></i>{{ text_newsletter }}</a></li>
                        </ul>
                    </div>
                </div>
                {{ content_bottom }}
            </section>
        </div>
        {{ column_right }}
    </div>
</div>
{{ footer }}
